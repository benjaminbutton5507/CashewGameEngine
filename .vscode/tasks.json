{
  "tasks": [
    {
      "label": "Build Release Win32 Sandbox",
      "type": "shell",
      "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
      "args": [
        "-m64",
        "-DCASHEW_PLATFORM_WINDOWS",
        "${workspaceFolder}\\Sandbox\\main.cpp",
        "-o",
        "${workspaceFolder}\\Build\\Release\\sandbox.exe",
        "-I${workspaceFolder}/Cashew/src",
        "-L${workspaceFolder}\\Build\\Release\\lib",
        "-lCashew"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "dependsOn": [
        "Build Release Win32 Cashew DLL"
      ]
    },
    {
      "label": "Build Release Win32 Cashew DLL",
      "type": "shell",
      "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
      "args": [
        "-m64",
        "-shared",
        "-DCASHEW_PLATFORM_WINDOWS",
        "-DCASHEW_EXPORTS",
        "-o",
        "${workspaceFolder}\\Build\\Release\\Cashew.dll",
        "${workspaceFolder}\\Cashew\\src\\Core.cpp",
        "-Wl,--out-implib",
        "${workspaceFolder}\\Build\\Release\\lib\\Cashew.lib",
        "-I${workspaceFolder}/Cashew/src"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "options": {
        "shell": {
          "executable": "cmd.exe",
          "args": [
            "/d",
            "/c"
          ]
        }
      }
    },
    {
      "label": "Run Win32 Sandbox",
      "type": "shell",
      "command": "start",
      "args": [
        "cmd",
        "/k",
        "${workspaceFolder}\\Build\\Release\\sandbox.exe"
      ],
      "dependsOn": [
        "Build Release Win32 Sandbox"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "options": {
        "shell": {
          "executable": "cmd.exe",
          "args": [
            "/d",
            "/c"
          ]
        }
      }
    },
  ],
  "version": "2.0.0"
}